{
  "name": "@gestell/zowe-mcp",
  "version": "0.1.3",
  "private": false,
  "description": "MCP server for Zowe CLI - enabling AI-powered mainframe operations",
  "main": "dist/index.js",
  "type": "module",
  "author": "Gestell, Inc",
  "bin": {
    "zowe-mcp-server": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "zowe",
    "mainframe",
    "zos",
    "ai",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gestell-AI/zowe-mcp.git"
  },
  "homepage": "https://github.com/Gestell-AI/zowe-mcp",
  "bugs": {
    "url": "https://github.com/Gestell-AI/zowe-mcp/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --resolve-full-paths --resolve-full-extension .js && node script/sanitize-build.mjs dist",
    "start": "node dist/index.js",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.typecheck.json",
    "test": "ZOWE_MCP_MOCK=true bun test",
    "test:watch": "ZOWE_MCP_MOCK=true bun test --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^20.0.0",
    "eslint": "^10.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jiti": "^2.6.1",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.56.0",
    "bun-types": "^1.3.5",
    "tsc-alias": "^1.8.16"
  }
}
