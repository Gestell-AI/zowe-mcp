{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@gestell/mcp": [
        "src/index.ts"
      ],
      "@gestell/mcp/*": [
        "src/*.ts",
        "src/*"
      ],
      "@gestell/schema": [
        "schema/index.ts"
      ],
      "@gestell/schema/*": [
        "schema/*.ts",
        "schema/*"
      ]
    }
  }
}
